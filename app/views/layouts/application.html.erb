<!DOCTYPE html>
<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>
<html>
<head>
  <title>RankingApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

<% if user_signed_in? %> 
  Logged in as <%= current_user.name %>. <%= link_to 'Edit profile', edit_user_registration_path %> | <%= link_to "Logout", destroy_user_session_path, method: :delete %> 
<% else %> 
  <%= link_to "Sign up", new_user_registration_path %> | <%= link_to "Login", new_user_session_path %> 
<% end %>

<div class="container">
<%= render 'layouts/header' %>
</div>

</head>
<body>

<%= yield %>

</body>
</html>
